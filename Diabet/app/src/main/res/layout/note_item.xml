<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="0dp">


        <TextView
            android:id="@+id/text_view_item_eating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_item_sugar_lvl"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:maxLength="110"
            android:text="до еды"
            android:textSize="14sp"
            android:textStyle="bold"
            app:fontFamily="@font/circe_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_view_item_well_being"
            app:layout_constraintTop_toBottomOf="@+id/text_view_item_sugar_lvl"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/text_view_item_sugar_lvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="148dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="25.5"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/circe_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_view_item_data"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/text_view_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_item_sugar_lvl"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:maxLength="110"
            android:text="22:24"
            android:textSize="14sp"
            android:textStyle="bold"
            app:fontFamily="@font/circe_light"
            app:layout_constraintBottom_toTopOf="@+id/text_view_item_well_being"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.571" />

        <TextView
            android:id="@+id/mmol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_item_sugar_lvl"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:maxLength="110"
            android:text="ммоль/л"
            android:textSize="14sp"
            android:textStyle="bold"
            app:fontFamily="@font/circe_light"
            app:layout_constraintBottom_toTopOf="@+id/text_view_item_well_being"
            app:layout_constraintStart_toEndOf="@+id/text_view_item_sugar_lvl"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_item_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_item_sugar_lvl"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:maxLength="110"
            android:text="13.12.2019"
            android:textSize="14sp"
            android:textStyle="bold"
            app:fontFamily="@font/circe_light"
            app:layout_constraintEnd_toStartOf="@+id/text_view_item_time"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_item_well_being"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_item_sugar_lvl"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:maxLength="110"
            android:text="Самочувствие нормальное,"
            android:textSize="14sp"
            android:textStyle="bold"
            app:fontFamily="@font/circe_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/text_view_item_sugar_lvl" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="18dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@color/colorIdent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>